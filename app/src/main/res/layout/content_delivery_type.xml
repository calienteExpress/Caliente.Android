<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_delivery_type"
    tools:context="com.caliente.express.activities.DeliveryTypeActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:text="Delivery >>"
            android:id="@+id/delivery_button"
            android:background="@drawable/gray_button"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/or_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/delivery_button"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="- OR -"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:text="Pickup >>"
            android:id="@+id/pickup_button"
            android:background="@drawable/gray_button"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_below="@id/or_label"
            android:layout_marginBottom="50dp"/>
    </RelativeLayout>
</RelativeLayout>
