<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_delivery"
    tools:context="com.caliente.express.activities.DeliveryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationLabel"
        android:text="confirm your location on the map below:"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickup_map_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/locationLabel"
        android:background="@drawable/delivery_map"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:text="confirm order"
        android:id="@+id/confirm_button"
        android:background="@drawable/gray_button"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

    <EditText
        android:id="@+id/delivery_instructions_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:lines="2"
        android:hint="add any delivery instructions here"
        android:background="@color/colorWhite"
        android:padding="3dp"
        android:layout_above="@id/confirm_button"
        />
</RelativeLayout>
